<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/widget_bg"
    tools:context=".MainActivity"
    tools:layout_height="@dimen/widget_size"
    tools:layout_width="@dimen/widget_size"
    tools:parentTag="FrameLayout">

    <!-- https://github.com/biodunalfet/SlidingSquaresLoader -->
    <com.hamza.slidingsquaresloaderview.SlidingSquareLoaderView
        android:id="@+id/bricksAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:sslv_color="@color/blue"
        app:sslv_square_length="22dp"
        app:sslv_gap="4dp"
        />

</merge>